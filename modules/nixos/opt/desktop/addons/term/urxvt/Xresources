! --- urxvt static settings (shared by all instances) ---

! letter & line spacing
! URxvt*letterSpace:     -2
! URxvt*lineSpace:       -1

! glyph fallback & bells
URxvt*skipBuiltinGlyphs: true
URxvt*urgentOnBell:      true

! geometry & font
URxvt*geometry:        80x240+0+0
URxvt*font:            xft:Terminus,\
                       xft:Symbols Nerd Font Mono

! enable login shell
URxvt*loginShell:      true

! scrollback & buffering
URxvt*depth:           32
URxvt*scrollBar:       false
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeypress: true
URxvt*saveLines:       7000
URxvt*buffered:        false

! Perl extensions
URxvt*perl-ext-common: default,\
                       background,\
                       matcher,\
                       readline,\
                       selection,\
                       confirm-paste,\
                       autocomplete-ALL-the-things

! border & cursor
URxvt*internalBorder:  8
URxvt*cursorBlink:     1
URxvt*cursorUnderline: true

! font-size keybindings
URxvt*keysym.C-8:      command:\033]710;\
                       xft:Terminus-8,xft:Symbols Nerd Font Mono:size=8\007
URxvt*keysym.C-9:      command:\033]710;\
                       xft:Terminus-10,xft:Symbols Nerd Font Mono:size=10\007
URxvt*keysym.C-0:      command:\033]710;\
                       xft:Terminus-15,xft:Symbols Nerd Font Mono:size=15\007
URxvt*keysym.C-minus:  command:\033]710;\
                       xft:Terminus-18,xft:Symbols Nerd Font Mono:size=18\007
URxvt*keysym.C-equal:  command:\033]710;\
                       xft:Terminus-21,xft:Symbols Nerd Font Mono:size=21\007

! matcher (clickable links)
URxvt*keysym.C-Delete:    matcher:last
URxvt*keysym.M-Delete:    matcher:list
URxvt*matcher.launcher.1: emacs +$2 $1
URxvt*matcher.pattern.1:  \\B(/\\S+?):(\\d+)(?=:|$)
URxvt*matcher.button:     1
URxvt*url-launcher:       firefox

! autocomplete-all-the-things
URxvt*keysym.M-C-slash:   perl:aAtt:word-complete
URxvt*keysym.M-question:  perl:aAtt:fuzzy-complete
URxvt*keysym.M-quotedbl:  perl:aAtt:undo
